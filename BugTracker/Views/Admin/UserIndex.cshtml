@using BugTracker.Models;
@using BugTracker.Helpers;

@model IEnumerable<UserProfileViewModel>
@{ 
    var roleHelper = new UserRolesHelper();
}

<div class="box-header">
    <i class="fa fa-users"></i>
    <h3 class="box-title">
        <strong> Users</strong>
    </h3>
</div>
<div class="body">
    <section class="content render-box skroll">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-solid">
                    <div class="box-header">
                        <i class="fa fa-user"></i>
                        <h3 class="box-title">
                            <strong> Assign User Roles</strong>
                        </h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-sm" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-sm" data-widget="remove">
                            <i class="fa fa-times"></i>
                        </button>
                        </div>
                    </div>
                    <div class="box-body">
                        <table class="userTable table table-bordered">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    using (Html.BeginForm("UserIndex", "Admin"))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.Hidden("userId", user.Id)
                                        <tr>
                                            @* ADD LINKS TO USER PROFILE VIEWS??? *@
                                            <td><img src="@user.AvatarUrl" class="img-circle" style="height:25px" />  @user.FirstName @user.LastName</td>
                                            <td>@user.Email</td>
                                            <td>
                                                @Html.DropDownList("RoleName", null, roleHelper.ListUserRoles(user.Id).FirstOrDefault(), htmlAttributes: new { @class = "form-control" })
                                            </td>
                                            <td class="edit-cell">
                                                <div class="col-md-offset-1">
                                                    <input type="submit" value="Assign" class="btn center-block form-control" />
                                                </div>
                                            </td>
                                        </tr>
                                    }

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section scripts
    {
    <script>
        $(".userTable").DataTable({
            'paging': true,
            'lengthMenu': [ [5, 10, 25, 50, -1], [5, 10, 25, 50, "All"] ],
            'searching': true,
            'ordering': true,
            'info': true,
            'autoWidth': false
        });
    </script>
    }