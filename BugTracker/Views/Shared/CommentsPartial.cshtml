@model BugTracker.Models.Ticket

   <div class="box box-solid" id="comments">
        <div class="box-header bg-aqua-active">
            <i class="fa fa-comments-o"></i>
            <h3 class="box-title"><strong>Comments</strong></h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn bg-aqua btn-sm" data-widget="collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn bg-aqua btn-sm" id="comEx">
                    <i class="fa fa-expand"></i>
                </button>
                <button type="button" class="btn bg-aqua btn-sm" data-widget="remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body bg-aqua">
            <div class="content bg-gray chat-box" @*id="scrollDown"*@>
                @foreach (var comment in Model.TicketComments)
                {
                    <div class="item">
                        <img src="@comment.Author.AvatarUrl" class="img-circle" style="height:40px"> @comment.Author.FullName
                        <small class="text-muted pull-right"><i class="fa fa-clock-o"></i> @comment.Created.ToString("h:mm tt M/dd/yyy")</small>
                        <p>
                            @comment.CommentBody
                        </p>
                    </div>
                    <hr />
                }
            </div>
        </div>
        <div class="box-footer bg-aqua-active">
            @if (User.Identity.IsAuthenticated)
            {
                using (Html.BeginForm("CreateComment", "Tickets", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id);
                    @Html.Hidden("TicketId", Model.Id);
                    <div class="row">
                        <div class="col-md-12">
                            <input class="form-control" name="CommentBody" placeholder="Add comment..." />
                            <br />
                            <button type="submit" class="btn btn-primary pull-right"><i class="fa fa-comment-o"></i></button>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
@section scripts{
