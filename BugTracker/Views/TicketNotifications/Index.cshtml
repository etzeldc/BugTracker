@using BugTracker.Helpers;

@model IEnumerable<BugTracker.Models.TicketNotification>

@{
    var ticketHelper = new TicketHelper();
}

<div class="box-header">
    <i class="fa fa-bell"></i>
    <h3 class="box-title">
        <strong> Notifications</strong>
    </h3>
</div>
<div class="body">
    <section class="content render-box skroll">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-solid">
                    <div class="box-header">
                        <i class="fa fa-bell"></i>
                        <h3 class="box-title">
                            <strong> Your Notifications</strong>
                        </h3>
                    </div>
                    <div class="box-body">
                        <div class="content back">

                                <ul class="timeline">
                                    @foreach (var date in Model.OrderByDescending(t => t.Created).Skip(TicketHelper.GetAllUserNotifications().Where(t => t.Created.ToString("dd, MMM yyyy") == t.Created.ToString("dd, MMM yyyy")).Count()-1))
                                    {
                                      
                                            <li class="time-label">
                                                <span class="bg-aqua">@date.Created.ToString("dd, MMM yyyy")</span>
                                            </li>
                                        
                                       
                                            foreach (var item in Model.OrderByDescending(t => t.Created))
                                            {
                                                if (item.Created.ToString("dd, MMM yyyy") == date.Created.ToString("dd, MMM yyyy"))
                                                {

                                            <li>
                                                <div class="timeline-item">
                                                <img src="@item.Sender.AvatarUrl" class="img-circle pull-left" style="height:30px;">
                                                    <span class="time"><i class="fa fa-clock-o"></i> @item.Created.ToString("H:mm tt")</span>
                                                    <h3 class="timeline-header"> @item.Sender.FirstName @item.Sender.LastName @item.Subject</h3>
                                                    <div class="timeline-body">
                                                        @item.NotificationBody
                                                    </div>
                                                </div>
                                            </li>
                                                }
                                            }
                                    }
                                </ul>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>