@{
    Layout = "/Views/Shared/_SecondLayout.cshtml";
}
@model BugTracker.Models.RegisterViewModel



<p style="text-align:center">Register a new membership</p>
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="row">
        <div class="col-xs-offset-1 col-xs-10">
            <div class="row has-feedback">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First Name" })
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
            </div>
            <div class="row has-feedback">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control ", placeholder = "Last Name" })
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
            </div>
            <div class="row has-feedback">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control ", placeholder = "Email" })
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div class="row has-feedback">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control ", placeholder = "Password" })
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <div class="row has-feedback">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control ", placeholder = "Confirm Password" })
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
        <br />
        <div class="row">
            <div class="col-xs-offset-2 col-xs-6">
                <div class="checkbox icheck">
                    <label>
                        <input value="true" type="checkbox"> I agree to the <a href="#">terms</a>
                    </label>
                </div>
            </div>
            <div class="col-xs-4">
                <button type="submit" class="btn ">Register</button>
            </div>
        </div>
        }
        <div class="row" style="text-align:center">
            <a href="@Url.Action("Login")" class="text-center">I already have a membership</a>
        </div>

